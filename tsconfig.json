{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}